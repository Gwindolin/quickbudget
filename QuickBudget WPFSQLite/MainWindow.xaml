                    <DataGridTemplateColumn Header="Type" Width="40" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image x:Name="IMG" Source="{Binding StatusImage}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Account" Width="SizeToCells" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding AccountName}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Account Value" Width="SizeToCells" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Accounted, StringFormat=N2}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding CurrencySymbol}" TextAlignment="Left"  Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="20"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Payee" Width="SizeToCells" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Payee}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Info" Width="SizeToCells" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Info}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Transaction Value" Width="SizeToCells" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Transactioned, StringFormat=N2}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding CurrencySymbol}" TextAlignment="Left"  Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="20"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTemplateColumn Header="Category" Width="SizeToCells" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Category}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!--<DataGridTemplateColumn Header="Frequency" Width="SizeToCells" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Frequency}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>-->
                    <DataGridTemplateColumn Header="Date" Width="SizeToCells" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Date}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="5,0,741,0" Width="324">
                <Button x:Name="ButtonAddTransaction" Content="Add Transaction" Background="Transparent" BorderThickness="1,1,1,1" Height="24" Width="140" Margin="0,25,184,0" Click="ButtonAddTransaction_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Button x:Name="ButtonRemoveTransaction" Background="Transparent" Content="Remove" HorizontalAlignment="Left" Margin="145,25,0,0" VerticalAlignment="Top" Width="140" Height="24" Click="ButtonRemoveTransaction_Click"/>
            </Grid>

        </Grid>
        <Grid x:Name="GridReview" HorizontalAlignment="Left" Height="auto" Margin="210,10,0,0" VerticalAlignment="Top" Width="auto" Visibility="Hidden">
            <Label x:Name="LabelReview" Content="Review" FontSize="21.333" Margin="10,10,760,663"/>

        </Grid>
        <Grid Background="#2b616d" Height="82" Margin="210,0,0,0" VerticalAlignment="Top">
            <Rectangle Fill="#ffffff" HorizontalAlignment="Left" Height="50" Margin="568,8,0,0" RadiusX="3" RadiusY="3"  VerticalAlignment="Top" Width="180"/>

            <Rectangle Fill="#ffffff" HorizontalAlignment="Left" Height="50" Margin="383,8,0,0" RadiusX="3" RadiusY="3"  VerticalAlignment="Top" Width="180"/>

            <Rectangle Fill="#ffffff" HorizontalAlignment="Left" Height="50" Margin="13,8,0,0" RadiusX="3" RadiusY="3"  VerticalAlignment="Top" Width="180"/>
            <TextBlock x:Name="TextBlockIncome" Text="0" FontSize="21.333" Margin="21,27,0,24" HorizontalAlignment="Left" Width="170"/>
            <Rectangle Fill="#ffffff" HorizontalAlignment="Left" Height="50" Margin="198,8,0,0" RadiusX="3" RadiusY="3"  VerticalAlignment="Top" Width="180"/>
            <TextBlock x:Name="TextBlockExpanse"  Text="0" FontSize="21.333" Margin="206,26,0,24" RenderTransformOrigin="1.467,0.541" HorizontalAlignment="Left" Width="170"/>
            <TextBlock x:Name="TextBlockBalance" Text="0" FontSize="21.333" Margin="391,26,0,24" HorizontalAlignment="Left" Width="170"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="21,11,0,0" TextWrapping="Wrap" Text="Income" VerticalAlignment="Top" Width="172" RenderTransformOrigin="0.51,0.125"/>
            <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="206,10,0,0" TextWrapping="Wrap" Text="Expanse" VerticalAlignment="Top" Width="172" RenderTransformOrigin="0.51,0.125"/>
            <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="391,10,0,0" TextWrapping="Wrap" Text="Balance" VerticalAlignment="Top" Width="172" RenderTransformOrigin="0.51,0.125"/>
            <TextBlock x:Name="TextBlockWorkable" Text="0" FontSize="21.333" Margin="576,26,0,24" HorizontalAlignment="Left" Width="170"/>
            <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="576,10,0,0" TextWrapping="Wrap" Text="Workable funds" VerticalAlignment="Top" Width="172" RenderTransformOrigin="0.51,0.125"/>
            <TextBlock x:Name="textBlockWarnings" HorizontalAlignment="Left" Margin="13,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="550" Foreground="White" FontSize="17.333" MouseDown="textBlockWarnings_MouseDown">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#FFD12B"/>
                        <Style.Triggers>
                            <Trigger Property ="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Red"/>
                                <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock x:Name="TextBlockSettings" HorizontalAlignment="Right" TextWrapping="Wrap" Padding="10,0,0,0" Text="Settings" Width="53" Background="#2b616d" Foreground="White" MouseDown="TextBlockSettings_OnMouseDown" VerticalAlignment="Bottom" Height="23" Margin="0,0,10,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property ="IsMouseOver" Value="True">
                                <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
        <TextBlock x:Name="TextBlockChange" HorizontalAlignment="Left" TextWrapping="Wrap" Padding="10,0,0,0" Text="Change Budgets" Width="210" Background="#FF336B87" Foreground="White" MouseDown="TextBlockChange_MouseDown" VerticalAlignment="Bottom" Height="23" Grid.RowSpan="2">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <Trigger Property ="IsMouseOver" Value="True">
                            <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

    </Grid>
</controls:MetroWindow>

